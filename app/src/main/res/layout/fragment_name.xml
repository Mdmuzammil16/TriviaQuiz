<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/darkGreen">


        <LinearLayout
            android:layout_width="@dimen/_180sdp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/imageholder"
            android:backgroundTint="@color/green"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginVertical="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:src="@drawable/person" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Name"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_22sdp"
            android:fontFamily="@font/montserratbold" />


        <EditText
            android:layout_width="match_parent"
            android:padding="@dimen/_12sdp"
            android:layout_margin="@dimen/_20sdp"
            android:hint="Enter Name"
            android:id="@+id/nameEt"
            android:fontFamily="@font/montserratregular"
            android:background="@drawable/dialogcurve"
            android:backgroundTint="#D7FFFFFF"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:background="@drawable/outlinebtn"
                android:backgroundTint="@color/green"
                android:layout_margin="@dimen/_12sdp"
                android:text="SAVE &amp; Start"
                android:fontFamily="@font/montserratbold"
                android:layout_gravity="bottom"
                android:textColor="@color/white"
                android:id="@+id/saveBtn"
                android:layout_height="@dimen/_36sdp" />
        </LinearLayout>


    </LinearLayout>
</layout>