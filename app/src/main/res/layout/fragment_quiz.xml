<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/green"
        android:layout_height="match_parent"
        tools:context=".Fragment.QuizFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:paddingVertical="@dimen/_6sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:gravity="center_vertical"
            android:elevation="@dimen/_8sdp"
            android:outlineProvider="paddedBounds"
            android:layout_margin="@dimen/_12sdp"
            android:background="@drawable/profilecurv"
            android:backgroundTint="#1C8A7C"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/person" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fazil"
                        android:fontFamily="@font/montserratmedium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LvL: 100"
                        android:fontFamily="@font/montserratbold"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_10sdp"/>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end|center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/clock"/>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:23"
                        android:id="@+id/timerTv"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:fontFamily="@font/montserratbold"
                        android:textColor="@color/white"/>





            </LinearLayout>

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/questionback"
                android:text="helos"
                android:fontFamily="@font/montserratregular"
                android:minHeight="@dimen/_140sdp"
                android:gravity="center"
                android:padding="@dimen/_12sdp"
                android:id="@+id/questionTv"
                android:layout_marginBottom="@dimen/_12sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/outlinebtn"
                android:elevation="@dimen/_4sdp"
                android:fontFamily="@font/montserratregular"
                android:backgroundTint="@color/white"
                android:layout_margin="@dimen/_12sdp"
                android:id="@+id/countTv"
                android:layout_marginBottom="@dimen/_12sdp"
                 android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_10sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:textColor="#575757"
                android:paddingHorizontal="@dimen/_12sdp"
                android:text="4 / 5"/>

        </FrameLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:backgroundTint="#D7FFFFFF"
            android:padding="@dimen/_12sdp"

            android:background="@drawable/sheetcurve"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:backgroundTint="#4BC5C5C5"
                    android:background="@drawable/profilecurv"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/answerA"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_12sdp"
                    android:backgroundTint="@null"
                    android:textColor="@color/green"
                    android:background="@drawable/outlinebtn"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@null"
                    android:padding="@dimen/_12sdp"
                    android:textColor="@color/green"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/outlinebtn"
                    android:id="@+id/answerB"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:backgroundTint="@null"
                    android:textColor="@color/green"
                    android:padding="@dimen/_12sdp"
                    android:background="@drawable/outlinebtn"
                    android:layout_height="wrap_content"
                    android:id="@+id/answerC"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:backgroundTint="@null"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:textColor="@color/green"
                    android:background="@drawable/outlinebtn"
                    android:id="@+id/answerD"
                    />
            </LinearLayout>
        </ScrollView>







    </LinearLayout>
</layout>